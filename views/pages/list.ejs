<html>

<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<div class = 'container' style='margin-top:10px;'>
    <form action='/user/order' method="POST">
       <div class = 'form-row'>
            <div class= 'form-group col-md-4 '>
                <select class='form-control form-col' name='tableName'>
                    <option value='entry_id'>ID</option>
                    <option value ='roaster_name'>Roaster</option>
                    <option value ='region_name'>Region</option>
                    <option value='brew_method'>Brew Method</option>
                </select> 
            </div>

        <button type='submit' class='btn btn-dark form-group' >Order By</button> 
        </div>
         
    </form>
</div>

