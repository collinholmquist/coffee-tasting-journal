<html>

<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<div>
    <form action='/journal' method="POST">
       <div class = 'form-row'>
        <div class= 'form-group col-md-4 '>
            <label class='form-col'>Order Entries By: </label>
            <select class='form-control form-col' name='tableName'>
                <option value='Coffee_ID'>ID</option>
                <option>Roaster</option>
                <option>Region</option>
                <option value='Brew_Method'>Brew Method</option>
            </select> 
        </div>
         
        </div>
        <button type='submit' class='btn btn-primary form-group' >Order By</button>  
    </form>
</div>

