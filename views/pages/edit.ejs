<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <h3>Editing...</h3>
        <form action ="/journal/<%=newRes.Coffee_ID%>" method="POST">
            <div class='form-group'>
                <label>Roaster</label>
                <input type='text' name = 'roaster' class='form-control' value="<%= newRes.Roaster %>">   
            </div>
            <div class='form-row'>
                <div class = 'col'>
                    <label>Region</label>
                    <input type='text' name = 'region'  class='form-control' value="<%= newRes.Region %>">
                </div>
                <div class ='col'>
                    <label>Tasting Notes</label>
                    <select name = 'tasting_notes' multiple class ='form-control'>
                        <option>test</option>
                    </select>
                </div>
            </div>
            <div class='form-group'>
                <label>Brew Method</label>
                <select name = 'brew_method' class='form-control'>
                    <option>test</option>
                </select>
            </div>
            <div class='form-group'>
                <label>Notes</label>
                <textarea name = 'comments' class ='form-control' rows="3" > <%= newRes.Comments %></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        
    </div>


</main>

<%- include('../partials/script'); %>

</body>
</html>